<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="false"
    android:layout_centerInParent="true"
    android:layout_centerVertical="false"
    android:padding="60dp"
    tools:context="com.luiz.sixbowls.MainActivity">

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/dateInput"
        android:layout_alignParentStart="true"
        android:text="TextView"
        android:textSize="30sp" />

    <Button
        android:id="@+id/dateInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="true"
        android:text="@string/dateButton"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/moneyInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateInput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:width="200dp"
        android:ems="10"
        android:hint="@string/initValue"
        android:inputType="numberDecimal"
        android:padding="10dp"
        android:textAlignment="textEnd"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/moneyInput"
        android:clickable="false"
        android:text="@string/currency"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="216dp" />

    <RadioGroup
        android:id="@+id/credDeb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/moneyInput"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:padding="20dp">

        <RadioButton
            android:id="@+id/cred"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="10dp"
            android:text="@string/credRB" />

        <RadioButton
            android:id="@+id/debit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:paddingStart="10dp"
            android:text="@string/debitRB"
            tools:layout_editor_absoluteX="-172dp"
            tools:layout_editor_absoluteY="302dp" />

    </RadioGroup>

    <Spinner
        android:id="@+id/bowl"
        android:layout_below="@+id/credDeb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <Button
        android:id="@+id/insertEntryBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bowl"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:background="@android:drawable/ic_input_add"
        android:elevation="10dp"
        android:onClick="insertEntry"
        android:padding="20dp"
        android:text="@string/save" />

    <Button
        android:id="@+id/goToReports"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/insertEntryBt"
        android:layout_below="@+id/insertEntryBt"
        android:layout_marginTop="28dp"
        android:onClick="goToReportsAct"
        android:text="Reports" />

</RelativeLayout>
